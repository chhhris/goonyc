<%= @trip.inspect %>


<% if 1 < 0 %>
<link rel="stylesheet" href="app.css" type="text/css" />
<%
    featured_trip_code = @trip.code.downcase
    @price = "$#{sprintf("%.0f", @trip.price)}"
    @dates = format_date(depart_at: @trip.depart_at, return_at: @trip.return_at)
%>
<div class="container">
  <div class="<%= featured_trip_code %>-details">
    <%= render partial: "destinations/#{featured_trip_code}" %>
  </div>
</div>

<%= render partial: 'footer' %>
<% end %>